<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<!-- change from  org.hibernate.dialect.MySQLDialect -->
		<property name="dialect">
			com.teddy.blog.dao.dialect.BlobMySQLDialect
		</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/blog?useOldAliasMetadataBehavior=true
		</property>
		<property name="connection.username">teddy</property>
		<property name="connection.password">teddy</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">
			MySQLTeddy
		</property>
		<mapping class="com.teddy.blog.bean.TArticle" />
		<mapping class="com.teddy.blog.bean.TComment" />
		<mapping class="com.teddy.blog.bean.TUser" />
		<mapping class="com.teddy.blog.bean.TKeyword" />
		<mapping class="com.teddy.blog.bean.TVisitor" />

	</session-factory>

</hibernate-configuration>